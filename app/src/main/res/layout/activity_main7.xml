<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i_3"
    tools:context=".Main7Activity">


    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="CARD NUMBER"
        android:textColorHint="#000000"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText9"
        android:layout_marginTop="105dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="NAME"
        android:textColorHint="#000000"/>

    <EditText
        android:id="@+id/editText11"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText9"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:hint="CVV"
        android:textColorHint="#000000"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="196dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText11"
        android:layout_alignTop="@+id/spinner2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner2"
        android:layout_marginStart="45dp"
        android:text="VALID till"
        android:textColor="#000000"
        android:textSize="20sp" />
</RelativeLayout>