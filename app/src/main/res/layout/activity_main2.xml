<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFA"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/button2"
        android:layout_width="183dp"
        android:layout_height="162dp"
        android:background="@drawable/i_10"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:text="HOTEL"
        android:textColor="#FFFAFA"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="205dp"
        android:layout_height="161dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/i_31"
        android:gravity="bottom"
        android:text="RESORT"
        android:textColor="#FFFAFA"
        android:layout_toRightOf="@+id/button2"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="183dp"
        android:layout_height="176dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:background="@drawable/i_26"
        android:gravity="bottom"
        android:text="TREEHOUSE"
        android:textAlignment="center"
        android:textColor="#FFFAFA"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="199dp"
        android:layout_height="178dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/i_35"
        android:gravity="bottom"
        android:text="FARMHOUSE"
        android:textAlignment="center"
        android:textColor="#FFFAFA"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="201dp"
        android:layout_height="180dp"
        android:background="@drawable/c3"
        android:gravity="bottom"
        android:text="PALACE"
        android:textAlignment="center"
        android:textColor="#FFFAFA"
        android:layout_toRightOf="@+id/button7"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="333dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="183dp"
        android:layout_height="181dp"
        android:background="@drawable/i_28"
        android:gravity="bottom"
        android:text="HOME"
        android:textColor="#FFFAFA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginBottom="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="332dp" />

</RelativeLayout>